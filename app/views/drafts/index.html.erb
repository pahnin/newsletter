<h2>Listing drafts</h2>

<table width="100%">
  <tr>
    <th width="80%">Draft</th>
    <th width="6%">status</th>
    <th width="5%"></th>
    <th width="4%"></th>
    <th width="5%"></th>
  </tr>

<% @drafts.each do |draft| %>
  <tr>
    <td><%= draft.draft %></td>
    <td><% if draft.use %>
          <font color=green>active</font>
        <% else %>
          <%= link_to 'inactive', activate_draft_path(draft) %>
        <% end %>
    </td>
    <td><%= link_to 'View', draft %></td>
    <td><%= link_to 'Edit', edit_draft_path(draft) %></td>
    <td><%= link_to 'Delete', draft, :method => :delete, :data => { :confirm => 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New Draft', new_draft_path %>
